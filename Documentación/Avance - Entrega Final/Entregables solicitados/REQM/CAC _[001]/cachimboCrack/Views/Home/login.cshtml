

@{
    ViewBag.Title = "Inicio de sesión";
}

<body background="~/Content/imágenes/fondo/bordeCircuito.jpg">
    <center>
        @using (Html.BeginForm())
        {
            <table height="100%" width="100%">
                <tr>
                    <td colspan="2" align="center">
                        <img src="@Url.Content("~/Content/imágenes/logo/logoIndex.png")" height="300" width="300" />
                    </td>
                </tr>
                <tr>
                    <td align="center">
                        <img src="@Url.Content("~/Content/imágenes/layout/estudioLogin.jpg")" height="300" width="400" />
                    </td>
                    <td align="center">
                        <img src="@Url.Content("~/Content/imágenes/layout/loginIcono.png")" height="200" width="200" />
                        <br /><br />
                        <label>Usuario:</label> <input type="text" name="usuarioAlumno" />
                        <label>Contraseña:</label> <input type="password" name="contraseñaAlumno" />
                        <br /><br />
                        <input type="submit" value="Iniciar sesión" />
                        <input type="reset" value="Borrar" />
                        <h3>@ViewBag.errorLogin</h3>
                    </td>
                </tr>
            </table>
        }
    </center>
</body>

